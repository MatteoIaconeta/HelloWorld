<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="HelloWorld.MainPage"
             xmlns:local="clr-namespace:HelloWorld.Extensions">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Basics">
                <TextCell Text="Name" Detail="Mosh Hamedani" />
                <EntryCell Label="Title" Placeholder="(eg Shopping)" />
                <SwitchCell Text="Notifications" On="True" />
                <local:DateCell Label="Starts" Date="1 Jan 2016"/>
                <local:DateCell Label="Ends" Date="31 Dec 2016"/>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>
