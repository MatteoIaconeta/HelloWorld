<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.ContactDetailPage"
             Title="{Binding FullName}">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection Title="Name" TextColor="Blue">
                <EntryCell Label="First name" Text="{Binding FirstName}" />
                <EntryCell Label="Last name" Text="{Binding LastName}" />
            </TableSection>
            <TableSection Title="Contact" TextColor="Blue">
                <EntryCell Label="Phone" Text="{Binding Phone}" Keyboard="Numeric" />
                <EntryCell Label="Email" Text="{Binding Email}" Keyboard="Email" />
            </TableSection>
            <TableSection Title="Other" TextColor="Blue">
                <SwitchCell Text="Blocked" On="{Binding IsBlocked}" />
            </TableSection>
            <TableSection>
                <ViewCell>
                    <Button Text="Save" Clicked="OnSave" CornerRadius="20" FontAttributes="Bold" BackgroundColor="LightBlue" />
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>